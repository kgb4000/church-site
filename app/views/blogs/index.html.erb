<section class="blog-hero-img">
  <div class="container">
    <h1>Pastor's Blog</h1>
  </div>
</section>

<div class="container">
  <p id="notice"><%= notice %></p>

  <section class="blog">
    <h2>Latest Posts</h2>
    <div class="btn">
      <%= link_to 'Write New Blog', new_blog_path %>
    </div>
    
      <% @blogs.each do |blog| %>
        <section class="blog-entry group">
          <%= image_tag blog.image.url(:medium), class:"blog-img" %>
          <div class="blog-details">
            <h1 class="blog-title"><%= blog.title %></h1>
            <img class="blog-author-img" src="img/tillet.jpg" />
            <p class="author">Rev. Tillett</p> |
            <span class="blog-date"><%= blog.date %></span>
            <div class="blog-excerpt"><%= truncate(blog.post, length: 220) %></div>
            <div class="read-more">
              <%= link_to 'Read More', blog %>
              <i class="fa fa-long-arrow-right"></i>
            </div>
            <div class="show-edit-delete-btns">
              <%= link_to 'Edit', edit_blog_path(blog) %> |
              <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </section>
      <% end %>
  </section>
</div>
<%= render "layouts/support" %>