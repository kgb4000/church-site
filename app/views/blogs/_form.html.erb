    <%= f.label :date %><br>
    <%= f.text_field :date, placeholder: "Date of the event", id: "datepicker-1" %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, placeholder: "Add an image" %>
  </div>
  <div class="field">
    <%= f.label :post %><br>
    <%= f.text_area :post, rows:"10", placeholder: "Post content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
