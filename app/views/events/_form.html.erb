        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name of event" %>
    </div>
    <div class="field">
      <%= f.label :date %>
      <%= f.text_field :date, placeholder: "Date of the event", id: "datepicker"  %>
    </div>
        <div class="field">
      <%= f.label :time %>
      <%= f.text_field :time, placeholder: "Time of the event", id: "timepicker"  %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Event description", rows: "8" %>
    </div>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, placeholder: "Address of the event" %>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image, placeholder: "Add an image" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
